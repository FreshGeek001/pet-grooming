<h2> Edit Service </h2>

<%= simple_form_for [:admin, @service] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>


  <div class="group">
    <%= f.input :price %>
  </div>

  <% if @service.image.present? %>
   <span>目前商品图</span> <br>
   <%= image_tag(@service.image.thumb.url) %>
 <% end %>

 <div class="group">
   <%= f.input :image, as: :file %>
 </div>

  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

<% end %>
