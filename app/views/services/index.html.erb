<h2> Service List </h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Price</th>
      <th width="200">Description</th>
    </tr>
  </thead>
  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td>
          <%= service.id %>
        </td>

        <td>
          <%= service.title %>
        </td>
        <td>
          <%= service.price %>
        </td>
        <td>
          <%= service.description %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
